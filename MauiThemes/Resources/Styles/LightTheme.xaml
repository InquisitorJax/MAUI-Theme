<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary x:Class="MauiThemes.Resources.Styles.LightTheme"
                    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="WindowBackground">#F1F5F9</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="BlandAccentLight">#B7B7B7</Color>
    <Color x:Key="BlandAccent">#757575</Color>
    <Color x:Key="BlandAccentDark">#545454</Color>
    <Color x:Key="Accent">#FF4500</Color>
    <Color x:Key="AccentUnSelected">#95FF4500</Color>
    <Color x:Key="AccentLight">#FF6A00</Color>
    <Color x:Key="BlandButtonColor">#757575</Color>
    <Color x:Key="ComboBoxButtonColor">#FFFFFF</Color>
    <Color x:Key="LabelTextColor">#222222</Color>
    <Color x:Key="LabelTextSubduedColor">#919191</Color>
    <Color x:Key="LabelTextBoldColor">#3F3F3F</Color>
    <Color x:Key="TextEditorFillColor">#FFFFFF</Color>
    <Color x:Key="ErrorColor">#780425</Color>
    <Color x:Key="SeparatorColor">#F1F2F3</Color>
    <Color x:Key="ShadowColor">#3F3F3F</Color>

    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource Accent}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{DynamicResource CardBackground}" />

    <Color x:Key="NavBarColor">#FFFFFF</Color>
    <Color x:Key="NavBarAccent">#00AF78</Color>
    <Color x:Key="NavBarAccentLight">#95047C54</Color>
</ResourceDictionary>